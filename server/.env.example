# Server Configuration
NODE_ENV=development
PORT=4000
# For production, use your actual domain:
# SERVER_URL=https://your-app.ondigitalocean.app
SERVER_URL=http://localhost:4000

# Database Configuration
DB_NAME=your_database_name
DB_USER=your_database_user
DB_PASS=your_database_password
DB_HOST=localhost
DB_PORT=3306

# For Cloud SQL (Google Cloud)
# DB_SOCKET_PATH=your-project:region:instance-name

# JWT Secret
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Session Secret
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# Zoom OAuth Configuration
ZOOM_CLIENT_ID=your_zoom_client_id
ZOOM_CLIENT_SECRET=your_zoom_client_secret
# For production: https://your-app.ondigitalocean.app/api/sessions/zoom/callback
ZOOM_REDIRECT_URL=http://localhost:4000/api/sessions/zoom/callback
ZOOM_WEBHOOK_SECRET_TOKEN=your_zoom_webhook_secret_token

# Email Configuration (Nodemailer)
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password

# Google OAuth (if using)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
# For production: https://your-app.ondigitalocean.app/auth/google/callback
GOOGLE_CALLBACK_URL=http://localhost:4000/auth/google/callback

# Firebase Configuration (for quiz battles)
FIREBASE_API_KEY=your_firebase_api_key
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_DATABASE_URL=https://your-project.firebaseio.com
FIREBASE_STORAGE_BUCKET=your-project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your_sender_id
FIREBASE_APP_ID=your_app_id

# Frontend URL (for CORS)
# For production: https://your-app.ondigitalocean.app
CLIENT_URL=http://localhost:5173
